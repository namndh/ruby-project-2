<%= form_with model: @song, local: true do |form| %>

  <div class="container-fluid" style="padding-top:20px">
    <% if @song.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@song.errors.count, "error") %> Error
        </h2>
        <ul>
          <% @song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %><br>
      <%= form.text_field :title, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :artist %><br>
      <%= form.text_field :artist, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :description %><br>
      <%= form.text_area :description, class: 'form-control', required: true  %>
    </div>

    <div class="form-group">
      <%= form.label :file %>
      <%= form.file_field :file%>
       <%= form.hidden_field :file_cache %>
    </div>
    <div class="form-group">
      <%= form.label :artwork %>
      <%= form.file_field :artwork %>
      <!-- <%= form.hidden_field :file_cache %> -->
    </div>
    <div class="form-group">
      <%= form.submit 'Upload', :class => 'btn btn-primary'%>
    </div>
  </div>

<% end %>
